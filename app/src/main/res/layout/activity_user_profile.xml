<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:orientation="vertical"
    android:background="#2A2B33">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:id="@+id/rlPortfolio">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:id="@+id/ivUserCover"
            android:src="@drawable/blood_bank">
        </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/gradient">
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="50dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/ivUserProfile"
                android:padding="3dp"
                android:src="@drawable/blood_bank">
            </de.hdodenhof.circleimageview.CircleImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B2FFFFFF"
            android:layout_below="@id/ivUserCover"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="200dp"
            android:textSize="25dp"
            android:fontFamily="monospace"
            android:id="@+id/tvUserName"
            android:text="Yamin Hossain">

        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ivUserCover"
            android:background="#4C4A55">
        </RelativeLayout>

        <TextView
            android:id="@+id/tvUserBloodGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivUserCover"
            android:layout_marginTop="10dp"
            android:fontFamily="serif-monospace"
            android:layout_marginLeft="170dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:textColor="#D7FFFFFF"
            android:textSize="20dp"
            android:text="blood group B+"
            android:background="@drawable/blood_rounded_corner"
            >

        </TextView>

        <LinearLayout
            android:id="@+id/llAddress"
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:layout_below="@+id/tvUserBloodGroup"
            android:layout_marginTop="10dp"
            android:background="#534F4F"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <ImageView
                    android:id="@+id/rivImage"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/address">

                </ImageView>

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@+id/rivImage"-->
<!--                    android:text="Address"-->
<!--                    android:textColor="#fff"-->
<!--                    android:textSize="25dp">-->

<!--                </TextView>-->

            </RelativeLayout>

            <LinearLayout
                android:layout_width="242dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10dp"
                    android:text="Dhaka"
                    android:textColor="#9EFFFFFF"
                    android:textSize="22dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/tvUserAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10dp"
                    android:text="Hashara sreenagar Munshigunj"
                    android:textColor="#9EFFFFFF"
                    android:textSize="22dp">

                </TextView>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llAddress"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="10"
            android:paddingLeft="20dp"
            android:id="@+id/llEducation"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mood"
                    android:id="@+id/rivImageEducation">

                </ImageView>
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@+id/rivImageEducation"-->
<!--                    android:text="Contact"-->
<!--                    android:textColor="#fff"-->
<!--                    android:textSize="20dp"-->
<!--                    android:textAlignment="center"-->
<!--                    android:gravity="center"-->
<!--                    >-->

<!--                </TextView>-->

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="242dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:layout_weight="7"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10dp"
                    android:text="yaminkhan017@gamil.com"
                    android:textColor="#9EFFFFFF"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:id="@+id/tvUserContactNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvUserEmail"
                    android:layout_marginTop="-71dp"
                    android:text="01636407330"
                    android:layout_weight="7"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10dp"
                    android:textSize="20dp">

                </TextView>

            </RelativeLayout>


        </LinearLayout>



    </RelativeLayout>

</LinearLayout>